<h1>Sign Up</h1>

<div class="row">
  <%= form_for(@user) do |f| %>

    <%= render 'shared/error_messages' %>

    <%= f.label :username %>
    <%= f.text_field :username %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :password %>
    <%= f.password_field :password %>

    <%= f.submit "Create my account" %>
  <% end %>
</div>
