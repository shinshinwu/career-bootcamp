<h1>New Interview Question Details</h1>

<%= form_for(@question) do |f| %>

  <%= f.label :job_title, 'Category (e.g. Front End Developer)' %>
  <%= f.text_field :job_title %>

  <%= f.label :topic, 'Question topic' %>
  <%= f.text_field :topic, placeholder: 'jQuery, CSS etc' %>

  <%= f.label :title, 'Question Title' %>
  <%= f.text_field :title, placeholder: 'Explain what HTTP is' %>

  <%= f.label :content, 'Question Details' %>
  <%= f.text_area :content, placeholder: 'Write any question related details here' %>

  <%= f.label :interview_type, 'Interview Format' %>
  <%= f.radio_button :interview_type, 'Onsite/In person' %>
  <%= f.label :interview_type, 'Onsite/In person', :value => 'Onsite' %>
  <%= f.radio_button :interview_type, 'Over the Phone' %>
  <%= f.label :interview_type, 'Phone', :value => 'Phone' %>
  <%= f.radio_button :interview_type, 'Email/Online Challenge' %>
  <%= f.label :interview_type, 'Email/Online Challenge', :value => 'Email/Online Challenge' %>

  <%= f.submit "Submit" %>

<% end %>