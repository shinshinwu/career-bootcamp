<div class="content" id="answer-play">

  <div class="pure-g">
    <div class="pure-u-5-6">
      <div class="l-box">
        <h3 class="content-subhead">Answer Details</h3>
        <ul class="list">

          <li>
            <div class="voting">
                  <a href="/questions/<%= @answer.question.id %>/answers/<%= @answer.id %>/upvote" class="fa fa-plus-circle"></a>
                  <br>
                  <a href="/questions/<%= @answer.question.id %>/answers/<%= @answer.id %>/downvote" class="fa fa-minus-circle"></a>
            </div>
            <div class="pure-u-5-6">
              <div class="votes">Votes: <%= @answer.votes %></div>
              <br>
              <div class="summary">Question: <a href="/questions/<%= @question.id %>"><%= @question.title %></a></div>

              <p>Question type: <%= @question.interview_type %></p>
              <% if @answer.external_solution_link %>
                <p>Link: <%= @answer.external_solution_link %></p>
              <% end %>
              <audio src="https://s3-us-west-1.amazonaws.com/careerbootcamp-audio/<%= @answer.s3_audio_key %>" controls id="audio" type="audio/ogg">Audio playback not supported on your browser, switch to Firefox or Chrome</audio>
              <!-- <div id="play-btn" class="play play-inactive firstplay"></div> -->
              <p> Answer Details:</p>
              <form class="pure-form pure-form-stacked">
                <textarea id="code-area" class="pure-input-1 code-area code-disabled disabled" data-answer-array="<%= @answer.content %>"><%= @answer.content[-1] %></textarea>
              </form>

              <div class="summary"></div>
              <div class="tags">
                <span class="author">Posted By: <%= @answer.user.username %> on <%= @answer.created_at.strftime('%a %d %b %Y') %></span>
              </div>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</div>